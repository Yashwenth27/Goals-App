<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/widget_background"> <!-- Optional: Create a background drawable -->

    <TextView
        android:id="@+id/widget_textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Days Together ❤️"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary" />
    <!-- Use system text color for better theme adaptability -->

    <TextView
        android:id="@+id/widget_textViewDays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="0 days"
        android:textSize="28sp"
        android:textColor="?android:attr/textColorSecondary" />

</LinearLayout>
